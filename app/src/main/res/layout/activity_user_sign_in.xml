<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:background="@color/off_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserSignInActivity">

        <!-- Main Sign-In Illustration -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleX="-1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loginpage_finishline_illastration" />

        <!-- CATALIFT Logo -->
        <ImageView
            android:id="@+id/catalift_logo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/catalift_logo" />

        <!-- Secondary text -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/madefortxt_bold"
            android:text="Give your career a EXTRA boost"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catalift_logo" />

        <!-- Sign-In text -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/madefortxt_semibold"
            android:text="Sign-in"
            android:textColor="@color/primary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <!-- Privacy policy text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/madefortxt_regular"
            android:text="@string/underlined_text_privacy_policy"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign-In Phone numer Input field -->
        <EditText
            android:id="@+id/signInPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/signin_inputbox_background"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/primary"
            android:layout_margin="20dp"
            android:textSize="14sp"
            android:textColorHint="@color/primary_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <!-- Sign-In Password Input field -->
        <EditText
            android:id="@+id/signInPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:background="@drawable/signin_inputbox_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/primary"
            android:textColorHint="@color/primary_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInPhoneNumber" />

        <!-- Forgot Password text -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/madefortxt_regular"
            android:text="@string/underlined_text_forgot_password"
            android:textColor="@color/primary_light"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInPassword" />

        <!-- Main Sign-In Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SignInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_button"
            android:fontFamily="@font/madefortxt_semibold"
            android:text="Sign-In"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <!-- Sign-Up text -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/SignInBtn"
            app:layout_constraintStart_toStartOf="@+id/SignInBtn"
            app:layout_constraintTop_toBottomOf="@+id/SignInBtn">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madefortxt_regular"
                    android:text="Don't have an account?"
                    android:textColor="@color/primary_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/SignUpBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/madefortxt_regular"
                    android:text="@string/underlined_text_sign_up"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
        </LinearLayout>

        <!-- Sign-In with Google text -->
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/madefortxt_regular"
                    android:text="or"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/primary" />
        </LinearLayout>

        <!-- Sign-In with Google Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signInWithGoogleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/signin_inputbox_background"
            android:drawableLeft="@drawable/google_icon"
            android:fontFamily="@font/madefortxt_semibold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="  Sign-In with Google"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>